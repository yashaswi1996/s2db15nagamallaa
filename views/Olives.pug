extends layout

block content
  h1= title
  - let Olives  = results;
  div(class="container-fluid mt-3 mystyle")
    - let create = `dispatch(\"/Olives/create\")`
    button.btn(class="btn-secondary ml-1", onClick=create) Create New Olives
    div(class="row m-1 paddingcustom")
      each Olives,index in Olives
        - let destination = `dispatch(\"/Olives/update?id=${Olives._id}\")` 
        - let detail = `dispatch(\"/Olives/detail/?id=${Olives._id}")`
        - let deleteItem = `dispatch(\"/Olives/delete/?id=${Olives._id}")`
        div(class="col-sm-5 values") #{Olives.Olives_color} - #{Olives_quantity} - #{Olives_cost}
          button.btn( class="btn-primary buttonCustom", onclick= destination) Update
          button.btn( class="btn-success buttonCustom", onclick= detail) Details
          button.btn( class="btn-danger buttonCustom", onclick= deleteItem) Delete
    
    script.
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatch(path){ 
        window.location.href=path 
      }